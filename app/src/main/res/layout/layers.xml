<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/fogLayer1"
        style="@style/fog_layer"
        android:background="@drawable/gradient_fog_layer"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/fogLayer2"
        style="@style/fog_layer"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/fogLayer3"
        style="@style/fog_layer"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/fogLayer4"
        style="@style/fog_layer"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_lines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:alpha="0.03"
        app:srcCompat="@drawable/image_lines" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:alpha="0.25"
        app:srcCompat="@drawable/image_smoke" />

</androidx.constraintlayout.widget.ConstraintLayout>